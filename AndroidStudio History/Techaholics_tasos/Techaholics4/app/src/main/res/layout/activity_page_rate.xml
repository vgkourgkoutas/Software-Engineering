<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#255358"
    tools:context=".page_rate">

    <Button
        android:id="@+id/backtoratepro"
        android:layout_width="154dp"
        android:layout_height="55dp"
        android:text="Πήγαινε πίσω"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="32dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressBackgroundTint="#FF9800"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="204dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="140dp"
        android:layout_height="37dp"
        android:text="Αξιολόγηση"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19" />

    <EditText
        android:id="@+id/editTextTextMultiLine"
        android:layout_width="344dp"
        android:layout_height="183dp"
        android:background="#FFFFFF"
        android:ems="20"
        android:gravity="start|top"
        android:hint="Αξιολόγηση προϊόντος καθώς και τυχόν βελτιώσεις που μπορούν να γίνουν..."
        android:inputType="textMultiLine"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.554" />

    <Button
        android:id="@+id/button16"
        android:layout_width="161dp"
        android:layout_height="66dp"
        android:text="Υποβολή αξιολόγησης"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.923" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="347dp"
        android:layout_height="99dp"
        android:text="* Σε περίπτωση που έχερε κάνει πάνω απο 10 αξιολογήσης θα δημιουργηθεί ένας κωδικός ο οποίος θα σας σταλεί μέσω μηνύματος και με αυτόν τον κωδικό θα έχετε έκπτωση στα προϊόντα μας."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="501dp" />

</androidx.constraintlayout.widget.ConstraintLayout>